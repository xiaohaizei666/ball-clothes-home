/*清除样式*/
ul,li,span,p,input,button{
  padding:0;
  margin:0;
  border:0;
  list-style:none;
}
a,a:visited{
  text-decoration:none;
}
/*头部上部样式*/
#header_top{
  margin:20px;
  height:100px;
}
/*logo图片*/
/*左浮动*/
.lf{
  float:left;
}
/*右浮动*/
.rt{
  float:right;
}
/*搜索框样式*/
#search{
  vertical-align:center;
  text-align:center;
  margin:25px 0 0 70px;
}
#search input{
  width:400px;
  height:40px;
  font-size:20px;
  color:#ff0036;
  border:1px solid #ff0036;
}
/*搜索按钮*/
#search button{
  width:80px;
  height:42px;
  color:#fff;
  text-align:center;
  font-size:18px;
  letter-spacing:5px;
  border:1px solid #ff0036;
  background-color:#ff0036;
  position:relative;
  top:1px;
  right:5px;
}
/*登录 注册 购物车样式*/
#header_top .rt ul{
  margin:10px;
}
#header_top .rt ul li{
  float:left;
  padding:2px 5px;
  line-height:30px;
}
#header_top .rt ul li a{
  color:#bbb;
  font-size:16px;
}
#header_top .rt ul li a:hover{
  color:#f00;
}

/*导航菜单栏样式*/
#nav{
  height:50px;
  background-color:#f00;
}
#nav ul{
  width:1190px;
  height:50px;
  margin:0 auto;
}
#nav ul li{
  float:left;
  width:150px;
  font-size:18px;
  font-weight:bold;
  text-align:center;
  line-height:50px;
}
#nav ul li a{
  color:#fff;
  width:150px;
  height:50px;
  display:inline-block;
}
#nav ul li a:hover{
  color:#f00;
  background-color:#f1f1f1;
}

/*banner轮播图*/
#banner{
  width:1190px;
  height:480px;
  overflow:hidden;
  margin:0 auto;
  position:relative;
}
/*上一张 下一张样式设置*/
#banner .banner-slide{
  width:35px;
  height:70px;
  color:#fff;
  font-size:18px;
  text-align:center;
  border-radius:3px;
  background-color:rgba(0,0,0,0.4);
  position:absolute;
  top:50%;
  margin-top:-35px;
}
/*上一张*/
#banner .lf{
  left:5px;
}
/*下一张*/
#banner .rt{
  right:5px;
}
/* < 和 > 设置*/




/*底部样式*/
/*底部上部分样式*/
#footer_top {
  height:100px;
  background-color:#414141;
  color:#ffffff;
  font-size:20px;
  box-sizing:border-box;
}
#footer_top ul{
  text-align:center;
  line-height:100px;
}
#footer_top ul li{
  display:inline-block;
  width:33%;
}
#footer_top ul li img{
  vertical-align:middle;
  padding-right:15px;
}

/*底部中间背景样式*/
#footer_middle{
  background-color:#ebebeb;
  height:200px;
}
/*底部中间5个列表样式*/
#footer_middle ul{
  display:inline-block;
  text-align:center;
  color:#a4a4a4;
  width:20%;
  padding-top:30px;
  float:left;
}
/*列表头样式*/
#footer_middle span{
  font-size:20px;
  color:#757575;
}
/*列表项设置*/
#footer_middle ul li{
  vertical-align:center;
  padding:5px;
  font-size:12px;
}
/*底部版权样式*/
#footer_bottom p{
  text-align:center;
  font-size:10px;
  color:#b5b5b5;
}








